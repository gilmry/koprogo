# Dockerfile.dev pour développement
FROM node:20-alpine

WORKDIR /app

# Copier package files
COPY package*.json ./

# Installer les dépendances
RUN npm ci

# Le code source sera monté via volume
# Pas de COPY . . ici

EXPOSE 3000

# Commande par défaut (peut être overridée)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
