---
import '../styles/global.css';
import '../lib/i18n';
import Navigation from '../components/Navigation.svelte';
import ToastContainer from '../components/ui/ToastContainer.svelte';
import SessionManager from '../components/SessionManager.svelte';
import LanguageSelector from '../components/LanguageSelector.svelte';
import SyncStatus from '../components/SyncStatus.svelte';

interface Props {
	title: string;
	showNav?: boolean;
	requireAuth?: boolean;
}

const { title, showNav = true, requireAuth = false } = Astro.props;
---

<!doctype html>
<html lang="nl">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="KoproGo - Plateforme SaaS de Gestion de Copropriété" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Runtime configuration - loaded from external file for post-build configuration -->
		<script is:inline src="/config.js"></script>
	</head>
	<body class="bg-gray-50 min-h-screen flex flex-col">
		{showNav && <Navigation client:load />}
		{requireAuth && <SessionManager client:load />}
		<main class="flex-1">
			<slot />
		</main>
		<ToastContainer client:load />
		<footer class="bg-white mt-12 border-t">
			<div class="container mx-auto px-4 py-6">
				<div class="flex flex-col md:flex-row items-center justify-between gap-4">
					<!-- Left: Language selector -->
					<div class="flex items-center gap-2">
						<LanguageSelector client:load />
					</div>

					<!-- Center: Copyright and tech stack -->
					<div class="text-center text-gray-600">
						<p class="text-sm">&copy; 2025 KoproGo - Gestion de Copropriété SaaS</p>
						<p class="text-xs mt-1 text-gray-500">
							Architecture Hexagonale · Rust · Actix-web · PostgreSQL · GDPR · ISO 27001
						</p>
					</div>

					<!-- Right: Sync status and online indicator -->
					<div class="flex items-center gap-2">
						<SyncStatus client:load />
					</div>
				</div>
			</div>
		</footer>
	</body>
</html>
