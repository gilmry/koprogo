---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Mes Charges - KoproGo">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-7xl mx-auto">
      <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Mes Charges</h1>
        <p class="text-gray-600 mt-2">
          Consultez les charges de votre copropriete.
        </p>
      </div>

      <div id="building-selector-container" class="mb-6"></div>

      <!-- Expense List -->
      <div id="expense-list-container"></div>

      <div class="mt-6">
        <a href="/owner" class="inline-flex items-center text-primary-600 hover:text-primary-700">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Retour a mon espace
        </a>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { mount, unmount } from 'svelte';
  import ExpenseList from '../../components/ExpenseList.svelte';
  import BuildingSelector from '../../components/BuildingSelector.svelte';

  const selectorContainer = document.getElementById('building-selector-container');
  const listContainer = document.getElementById('expense-list-container');
  let listComponent: any = null;

  function mountList(buildingId: string) {
    if (!listContainer) return;
    if (listComponent) {
      try { unmount(listComponent); } catch {}
    }
    listContainer.innerHTML = '';
    listComponent = mount(ExpenseList, {
      target: listContainer,
      props: { buildingId },
    });
  }

  if (selectorContainer) {
    mount(BuildingSelector, {
      target: selectorContainer,
      props: {
        label: 'Immeuble',
        onSelect: (id: string) => mountList(id),
      },
    });
  }
</script>
