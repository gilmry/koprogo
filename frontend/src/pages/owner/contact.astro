---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Contact - KoproGo">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-6">Contacter le Syndic</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Formulaire de contact (future) -->
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Envoyer un Message</h2>

          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-3 mb-4 text-sm text-yellow-700 rounded-r">
            La messagerie directe sera disponible prochainement.
          </div>

          <div class="space-y-4 opacity-50 pointer-events-none">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Sujet</label>
              <select class="w-full px-3 py-2 border border-gray-300 rounded-lg" disabled>
                <option>Question sur les charges</option>
                <option>Demande de travaux</option>
                <option>Problème technique</option>
                <option>Information générale</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Message</label>
              <textarea
                rows="6"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg"
                placeholder="Décrivez votre demande..."
                disabled
              ></textarea>
            </div>
            <button class="w-full bg-primary-600 text-white py-2 rounded-lg cursor-not-allowed" disabled>
              Envoyer
            </button>
          </div>
        </div>

        <!-- Coordonnées du syndic (dynamiques) -->
        <div class="space-y-6">
          <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Coordonnées du Syndic</h2>
            <div id="syndic-contact-panel">
              <!-- Syndic info will be mounted here -->
              <div class="flex items-center gap-2 text-gray-400 py-4">
                <div class="animate-spin w-4 h-4 border-2 border-gray-300 border-t-transparent rounded-full"></div>
                <span class="text-sm">Chargement...</span>
              </div>
            </div>
          </div>

          <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
            <h3 class="font-semibold text-blue-900 mb-2">Astuce</h3>
            <p class="text-sm text-blue-700">
              Pour une réponse plus rapide, consultez d'abord la FAQ et vos documents disponibles dans votre espace.
            </p>
          </div>
        </div>
      </div>

      <div class="mt-6">
        <a href="/owner" class="inline-flex items-center text-primary-600 hover:text-primary-700">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Retour à mon espace
        </a>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { mount } from "svelte";
  import { get } from "svelte/store";
  import { authStore } from "../../stores/auth";
  import SyndicContactPanel from "../../components/SyndicContactPanel.svelte";

  await authStore.init();
  const auth = get(authStore);

  if (!auth.isAuthenticated) {
    window.location.href = "/login";
  } else {
    const buildingIds: string[] = auth.user?.buildingIds ?? [];
    const container = document.getElementById("syndic-contact-panel");
    if (container) {
      container.innerHTML = "";
      mount(SyndicContactPanel, {
        target: container,
        props: { buildingIds },
      });
    }
  }
</script>
