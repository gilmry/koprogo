---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Mes Lots - KoproGo">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-7xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-6">Mes Lots</h1>

      <div id="owner-units-container">
        <div class="flex items-center justify-center gap-2 text-gray-400 py-8">
          <div class="animate-spin w-5 h-5 border-2 border-gray-300 border-t-transparent rounded-full"></div>
          <span class="text-sm">Chargement...</span>
        </div>
      </div>

      <div class="mt-6">
        <a href="/owner" class="inline-flex items-center text-primary-600 hover:text-primary-700">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Retour Ã  mon espace
        </a>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { mount } from "svelte";
  import { get } from "svelte/store";
  import { authStore } from "../../stores/auth";
  import OwnerUnitList from "../../components/OwnerUnitList.svelte";

  await authStore.init();
  const auth = get(authStore);

  if (!auth.isAuthenticated) {
    window.location.href = "/login";
  } else {
    const buildingIds: string[] = auth.user?.buildingIds ?? [];
    const container = document.getElementById("owner-units-container");
    if (container) {
      container.innerHTML = "";
      mount(OwnerUnitList, {
        target: container,
        props: { buildingIds },
      });
    }
  }
</script>