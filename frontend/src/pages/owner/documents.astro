---
import Layout from '../../layouts/Layout.astro';
import DocumentList from '../../components/DocumentList.svelte';
---

<Layout title="Mes Documents - KoproGo">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-7xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-6">Mes Documents</h1>
      <p class="text-gray-600 mb-6">
        Retrouvez ici les documents mis à disposition par votre syndic. Téléchargez vos PV,
        appels de fonds et autres pièces importantes en quelques clics.
      </p>

      <DocumentList client:load allowUpload={false} allowDelete={false} />

      <div class="mt-6">
        <a href="/owner" class="inline-flex items-center text-primary-600 hover:text-primary-700">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Retour à mon espace
        </a>
      </div>
    </div>
  </div>
</Layout>
