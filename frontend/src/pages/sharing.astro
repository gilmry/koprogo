---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Object Sharing Library - KoproGo">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Object Sharing Library</h1>
      <p class="text-gray-600 mt-1">
        Borrow and lend tools, equipment, and other items within your community
      </p>
    </div>

    <div id="building-selector-container" class="mb-6"></div>
    <div id="object-list-container"></div>
  </div>
</Layout>

<script>
  import { mount, unmount } from "svelte";
  import SharedObjectList from "../components/sharing/SharedObjectList.svelte";
  import BuildingSelector from "../components/BuildingSelector.svelte";

  const selectorContainer = document.getElementById("building-selector-container");
  const listContainer = document.getElementById("object-list-container");
  let listComponent: any = null;

  function mountList(buildingId: string) {
    if (!listContainer) return;
    if (listComponent) { try { unmount(listComponent); } catch {} }
    listContainer.innerHTML = "";
    listComponent = mount(SharedObjectList, {
      target: listContainer,
      props: { buildingId, showFilters: true },
    });
  }

  if (selectorContainer) {
    mount(BuildingSelector, {
      target: selectorContainer,
      props: {
        label: "Immeuble",
        onSelect: (id: string) => mountList(id),
      },
    });
  }
</script>
