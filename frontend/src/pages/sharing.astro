---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Object Sharing Library - KoproGo">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Object Sharing Library</h1>
      <p class="text-gray-600 mt-1">
        Borrow and lend tools, equipment, and other items within your community
      </p>
    </div>

    <div id="object-list-container"></div>
  </div>
</Layout>

<script>
  import { mount } from "svelte";
  import SharedObjectList from "../components/sharing/SharedObjectList.svelte";
  import { authStore } from "../stores/auth";
  import { get } from "svelte/store";

  const auth = get(authStore);
  const buildingId = auth.user?.building_id || "";

  const listContainer = document.getElementById("object-list-container");
  if (listContainer) {
    mount(SharedObjectList, {
      target: listContainer,
      props: {
        buildingId: buildingId,
        showFilters: true,
      },
    });
  }
</script>
