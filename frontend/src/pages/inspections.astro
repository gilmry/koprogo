---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Inspections techniques - KoproGo">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Inspections techniques</h1>
      <p class="text-gray-600 mt-1">
        Suivi des contrôles réglementaires : ascenseurs, chaudières, installations électriques et plus
      </p>
    </div>

    <div id="building-selector-container" class="mb-6"></div>
    <div id="inspections-container"></div>
  </div>
</Layout>

<script>
  import { mount, unmount } from "svelte";
  import InspectionList from "../components/inspections/InspectionList.svelte";
  import BuildingSelector from "../components/BuildingSelector.svelte";

  const selectorContainer = document.getElementById("building-selector-container");
  const listContainer = document.getElementById("inspections-container");
  let listComponent: any = null;

  function mountList(buildingId: string) {
    if (!listContainer) return;
    if (listComponent) { try { unmount(listComponent); } catch {} }
    listContainer.innerHTML = "";
    listComponent = mount(InspectionList, {
      target: listContainer,
      props: { buildingId },
    });
  }

  if (selectorContainer) {
    mount(BuildingSelector, {
      target: selectorContainer,
      props: {
        label: "Immeuble",
        onSelect: (id: string) => mountList(id),
      },
    });
  }
</script>
