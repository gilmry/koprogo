---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Paramètres - KoproGo">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-6">Paramètres</h1>

      <div id="user-settings-panel">
        <!-- UserSettings Svelte component will be mounted here -->
        <div class="flex items-center gap-2 text-gray-400 py-8 justify-center">
          <div class="animate-spin w-6 h-6 border-2 border-gray-300 border-t-transparent rounded-full"></div>
          <span class="text-sm">Chargement...</span>
        </div>
      </div>

      <div class="mt-6">
        <a href="javascript:history.back()" class="inline-flex items-center text-primary-600 hover:text-primary-700">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Retour
        </a>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { mount } from "svelte";
  import { get } from "svelte/store";
  import { authStore } from "../stores/auth";
  import UserSettings from "../components/UserSettings.svelte";

  await authStore.init();
  const auth = get(authStore);

  if (!auth.isAuthenticated) {
    window.location.href = "/login";
  } else {
    const container = document.getElementById("user-settings-panel");
    if (container) {
      container.innerHTML = "";
      mount(UserSettings, { target: container });
    }
  }
</script>
