---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Resource Booking - KoproGo">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Resource Booking Calendar</h1>
      <p class="text-gray-600 mt-1">
        Reserve meeting rooms, parking spaces, gym, and other common areas
      </p>
    </div>

    <div id="resource-list-container"></div>
  </div>
</Layout>

<script>
  import { mount } from "svelte";
  import ResourceList from "../components/bookings/ResourceList.svelte";
  import { authStore } from "../stores/auth";
  import { get } from "svelte/store";

  const auth = get(authStore);
  const buildingId = auth.user?.building_id || "";

  const listContainer = document.getElementById("resource-list-container");
  if (listContainer) {
    mount(ResourceList, {
      target: listContainer,
      props: {
        buildingId: buildingId,
        showFilters: true,
      },
    });
  }
</script>
