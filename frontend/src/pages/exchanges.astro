<script>
  import { mount, unmount } from "svelte";
  import { ExchangeList, CreditBalance, Leaderboard, SelStatistics } from "../components/local-exchanges";
  import BuildingSelector from "../components/BuildingSelector.svelte";
  import { getMyOwner } from "../lib/api";

  // Resolve the real owner_id from the backend (user_id ‚Üí owner_id via JWT org)
  let currentOwnerId = "";

  const selectorContainer = document.getElementById("building-selector-container");
  const balanceContainer = document.getElementById("credit-balance-container");
  const leaderboardContainer = document.getElementById("leaderboard-container");
  const statsContainer = document.getElementById("statistics-container");
  const listContainer = document.getElementById("exchange-list-container");

  let mounted: any[] = [];

  function mountAll(buildingId: string) {
    // Cleanup previous
    for (const c of mounted) { try { unmount(c); } catch {} }
    mounted = [];
    if (balanceContainer) balanceContainer.innerHTML = "";
    if (leaderboardContainer) leaderboardContainer.innerHTML = "";
    if (statsContainer) statsContainer.innerHTML = "";
    if (listContainer) listContainer.innerHTML = "";

    if (balanceContainer && currentOwnerId) {
      mounted.push(mount(CreditBalance, {
        target: balanceContainer,
        props: { ownerId: currentOwnerId, buildingId },
      }));
    }

    if (leaderboardContainer) {
      mounted.push(mount(Leaderboard, {
        target: leaderboardContainer,
        props: { buildingId, limit: 10 },
      }));
    }

    if (statsContainer) {
      mounted.push(mount(SelStatistics, {
        target: statsContainer,
        props: { buildingId },
      }));
    }

    if (listContainer) {
      mounted.push(mount(ExchangeList, {
        target: listContainer,
        props: { buildingId, currentOwnerId, showOnlyAvailable: false, showFilters: true },
      }));
    }
  }

  // Fetch owner_id then mount building selector
  async function init() {
    const owner = await getMyOwner();
    if (owner) {
      currentOwnerId = owner.id;
    }

    if (selectorContainer) {
      mount(BuildingSelector, {
        target: selectorContainer,
        props: {
          label: "Immeuble",
          onSelect: (id: string) => mountAll(id),
        },
      });
    }
  }

  init();
</script>
