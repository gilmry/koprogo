<script>
  import { mount } from "svelte";
  import { ExchangeList, CreditBalance, Leaderboard, SelStatistics } from "../components/local-exchanges";
  import { authStore } from "../stores/auth";
  import { get } from "svelte/store";

  const auth = get(authStore);
  const buildingId = auth.user?.buildingIds?.[0] || "";
  const currentOwnerId = auth.user?.id || ""; // TODO: Map to owner_id from unit ownership

  // Mount Credit Balance
  const balanceContainer = document.getElementById("credit-balance-container");
  if (balanceContainer && currentOwnerId && buildingId) {
    mount(CreditBalance, {
      target: balanceContainer,
      props: {
        ownerId: currentOwnerId,
        buildingId: buildingId,
      },
    });
  }

  // Mount Leaderboard
  const leaderboardContainer = document.getElementById("leaderboard-container");
  if (leaderboardContainer && buildingId) {
    mount(Leaderboard, {
      target: leaderboardContainer,
      props: {
        buildingId: buildingId,
        limit: 10,
      },
    });
  }

  // Mount Statistics
  const statsContainer = document.getElementById("statistics-container");
  if (statsContainer && buildingId) {
    mount(SelStatistics, {
      target: statsContainer,
      props: {
        buildingId: buildingId,
      },
    });
  }

  // Mount Exchange List
  const listContainer = document.getElementById("exchange-list-container");
  if (listContainer && buildingId) {
    mount(ExchangeList, {
      target: listContainer,
      props: {
        buildingId: buildingId,
        currentOwnerId: currentOwnerId,
        showOnlyAvailable: false,
        showFilters: true,
      },
    });
  }
</script>
