################################################################################
# KoproGo Production Environment Variables
# Copy to .env and fill with actual values
# DO NOT commit .env to git!
################################################################################

# GitHub Container Registry
GITHUB_REPOSITORY=your-username/koprogo
IMAGE_TAG=latest

# Traefik Configuration
ACME_EMAIL=admin@example.com
TRAEFIK_DOMAIN=traefik.koprogo.com
TRAEFIK_LOG_LEVEL=INFO
# Dashboard auth (default: admin/admin - CHANGE THIS!)
# Generate with: echo $(htpasswd -nb admin your-password) | sed 's/\$/\$\$/g'
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$8EVjn/nj$$GiLUZqcbueTFeD23SuB6x0

# Domain Configuration
API_DOMAIN=api2.koprogo.com
FRONTEND_DOMAIN=app.koprogo.com

# Database Configuration
POSTGRES_DB=koprogo_db
POSTGRES_USER=koprogo
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Backend Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
RUST_LOG=warn
RUST_BACKTRACE=0
ACTIX_WORKERS=1
CORS_ALLOWED_ORIGINS=https://app.koprogo.com,https://app2.koprogo.com
DB_POOL_MAX_CONNECTIONS=8
DB_POOL_MIN_CONNECTIONS=2
ENABLE_RATE_LIMITING=false
JWT_SECRET=CHANGE_ME_SUPER_LONG_RANDOM_STRING_AT_LEAST_32_CHARS

# Frontend Configuration
PUBLIC_API_URL=https://api2.koprogo.com/api/v1
