# Production Environment Variables

# OVH Configuration
ovh_service_name = "your-ovh-project-id"
ovh_endpoint     = "ovh-eu"

# SSH Configuration
ssh_public_key = "ssh-rsa AAAAB3... your-production-key-here"

# Admin IPs for SSH access (VPN, bastion, office IPs only)
admin_ips = [
  "203.0.113.10/32",  # Office VPN
  "203.0.113.20/32",  # Bastion host
]

# DNS Configuration
domain_name              = "koprogo.io"
