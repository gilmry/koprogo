# Development Environment Variables
# Copy to terraform.tfvars and fill in your values

# OVH Configuration
ovh_service_name = "your-ovh-project-id"
ovh_endpoint     = "ovh-eu"

# SSH Configuration
ssh_public_key = "ssh-rsa AAAAB3... your-key-here"

# Admin IPs for SSH access (your office/home IP)
admin_ips = [
  "1.2.3.4/32",  # Office IP
  "5.6.7.8/32",  # Home IP
]

# DNS Configuration (optional in dev)
create_dns_records = false
domain_name        = "koprogo.dev"
